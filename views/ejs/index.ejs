<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Express</title>
</head>
<body>
    <h1 class="text-center">Bienvenido a Express</h1>
    <div class="container">
        <table class="table">
            <thead>
                    <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col" class="text-center">Title</th>
                    <th scope="col" class="text-center">Price</th>
                    <th scope="col" class="text-center">Thumbnail</th>
                </tr>
            </thead>
            <tbody>
                <% productos.forEach(function(producto) { %>
                    <tr>
                        <th scope="row" class="text-center"><%= producto.id %></th>
                        <td class="text-center"><%= producto.name %></td>
                        <td class="text-center"><%= producto.price %></td>
                        <td class="text-center"><img src=<%= producto.thumbnail %>></img></td>
                    </tr>
                <% }); %>
            </tbody>
            <button class="btn"><a href="/api/productos" >Ir a productos</a></button>
        </table>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="../../server3.js"></script>
</body>
</html>